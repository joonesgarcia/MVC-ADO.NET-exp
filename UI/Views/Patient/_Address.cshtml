@model DAL.Models.Patient

@for (int i = 0; i < Model.Adresses.Count; i++)
{
    <div class="row itemRow" id="item-row-@i">
        <input asp-for="@Model.Adresses[i].Id" type="hidden" />

        <div class="card col mb-3">
            <div class="card-body row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="@Model.Adresses[i].Cep" class="control-label"></label>
                        <input asp-for="@Model.Adresses[i].Cep" class="form-control cep" data-index="@i" />
                        <span asp-validation-for="@Model.Adresses[i].Cep" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-1">
                    <div class="form-group">
                        <label asp-for="@Model.Adresses[i].State" class="control-label"></label>
                        <input asp-for="@Model.Adresses[i].State" class="form-control" />
                        <span asp-validation-for="@Model.Adresses[i].State" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-7">
                    <div class="form-group">
                        <label asp-for="@Model.Adresses[i].City" class="control-label"></label>
                        <input asp-for="@Model.Adresses[i].City" class="form-control" />
                        <span asp-validation-for="@Model.Adresses[i].City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-10">
                    <div class="form-group">
                        <label asp-for="@Model.Adresses[i].Street" class="control-label"></label>
                        <input asp-for="@Model.Adresses[i].Street" class="form-control" />
                        <span asp-validation-for="@Model.Adresses[i].Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <label asp-for="@Model.Adresses[i].HouseNumber" class="control-label"></label>
                        <input asp-for="@Model.Adresses[i].HouseNumber" class="form-control" />
                        <span asp-validation-for="@Model.Adresses[i].HouseNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col text-right">
                    @if (i > 0)
                    {
                        <a href="#" class="remove-row btn btn-danger" id="btn-excluir-@i" data-index="@i">Excluir</a>
                    }

                    @if (i == (Model.Adresses.Count - 1))
                    {
                        <a href="#" id="addRow" class="btn btn-success">Adicionar</a>
                    }
                </div>           
            </div>
        </div>
    </div>
}

